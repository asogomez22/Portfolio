<style>
  /* === ESTILOS NATIVOS AVANZADOS (SIN REACT) === */
  
  /* Gradiente animado para el texto principal */
  .text-shine {
    background: linear-gradient(
      110deg,
      #f0f7ff 30%,
      #7dd3fc 50%,
      #f0f7ff 70%
    );
    background-size: 200% auto;
    color: transparent;
    -webkit-background-clip: text;
    background-clip: text;
    animation: shine 4s linear infinite;
  }
  @keyframes shine {
    to { background-position: 200% center; }
  }

  /* Animación de marquesina infinita para stack tecnológico */
  .marquee-track {
    display: flex;
    width: max-content;
    animation: scroll 30s linear infinite;
  }
  .marquee-track:hover {
    animation-play-state: paused;
  }
  @keyframes scroll {
    to { transform: translateX(-50%); }
  }

  /* Efecto flotante para SVGs decorativos */
  .float-slow {
    animation: float 6s ease-in-out infinite;
  }
  .float-delayed {
    animation: float 8s ease-in-out 3s infinite;
  }
  @keyframes float {
    0% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(2deg); }
    100% { transform: translateY(0px) rotate(0deg); }
  }

  /* Glow en hover para las tarjetas tipo Bento */
  .glow-card {
    position: relative;
  }
  .glow-card::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: radial-gradient(800px circle at var(--mouse-x, 50%) var(--mouse-y, 50%), rgba(255,255,255,0.06), transparent 40%);
    opacity: 0;
    transition: opacity 0.5s;
    pointer-events: none;
    z-index: 1;
  }
  .glow-card:hover::before {
    opacity: 1;
  }
</style>

