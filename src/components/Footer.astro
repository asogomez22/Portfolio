---
// Footer.astro
const year = new Date().getFullYear();

const nav = [
  { label: "Inicio", href: "#top" },
  { label: "Sobre mí", href: "#sobre" },
  { label: "Experiencia", href: "#experiencia" },
  { label: "Conocimientos", href: "#conocimientos" },
  { label: "Contacto", href: "#contacto" },
];

const links = [
  { label: "GitHub", href: "https://github.com/asogomez22" },
  { label: "LinkedIn", href: "https://www.linkedin.com/in/alejandro-sopeña-30a238344/" },
];
---

<footer class="relative overflow-hidden">
  <!-- DOT GRID -->
  <div
    aria-hidden="true"
    class="pointer-events-none absolute inset-0 z-0 opacity-20
           bg-[radial-gradient(rgba(255,255,255,0.60)_1px,transparent_1px)]
           [background-size:18px_18px]"
  ></div>

  <!-- Soft overlay -->
  <div
    aria-hidden="true"
    class="pointer-events-none absolute inset-0 z-0 bg-linear-to-b from-transparent via-black/10 to-black/25"
  ></div>

  <div class="relative z-10 mx-auto max-w-6xl px-6 md:px-10 py-12">
    <div class="rounded-3xl border border-white/12 bg-white/10 backdrop-blur-md shadow-lg shadow-black/25 overflow-hidden">
      <!-- Top -->
      <div class="px-6 py-6 md:px-8 md:py-7">
        <div class="grid gap-8 md:grid-cols-12 md:items-start">
          <!-- Izquierda (solo CTAs, sin texto “bio”) -->
          <div class="md:col-span-4 text-white">
            <p class="text-xs font-semibold uppercase tracking-wider text-white/70">
              Acciones rápidas
            </p>

            <div class="mt-4 grid gap-3 justify-items-center">
              <a
                href="#contacto"
                class="group inline-flex w-full max-w-xs items-center justify-between gap-3 rounded-2xl border border-white/12 bg-white/10 px-4 py-3
                       text-sm font-semibold text-white/85 transition
                       hover:bg-white/15 hover:border-white/20
                       focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/45"
              >
                Ir a contacto
                <span aria-hidden="true" class="text-white/55 transition group-hover:translate-x-0.5">→</span>
              </a>



              <button
                type="button"
                data-cv-download
                class="group inline-flex w-full max-w-xs items-center justify-between gap-3 rounded-2xl border border-white/12 bg-white/10 px-4 py-3
                       text-sm font-semibold text-white/85 transition
                       hover:bg-white/15 hover:border-white/20
                       focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/45"
              >
                Descargar CV
                <span aria-hidden="true" class="text-white/55 transition group-hover:translate-x-0.5">→</span>
              </button>

              <a
                href="#top"
                class="group inline-flex w-full max-w-xs items-center justify-between gap-3 rounded-2xl border border-white/12 bg-white/10 px-4 py-3
                       text-sm font-semibold text-white/85 transition
                       hover:bg-white/15 hover:border-white/20
                       focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/45"
              >
                Volver arriba
                <span aria-hidden="true" class="text-white/55 transition group-hover:translate-x-0.5">→</span>
              </a>
            </div>


          </div>

          <!-- Navegación -->
          <div class="md:col-span-4">
            <p class="text-xs font-semibold uppercase tracking-wider text-white/70">
              Navegación
            </p>

            <nav class="mt-3 grid grid-cols-2 gap-x-4 gap-y-2">
              {nav.map((item) => (
                <a
                  href={item.href}
                  class="w-fit rounded-lg px-1 py-1 text-sm font-semibold text-white/80 transition
                         hover:text-white focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/40"
                >
                  {item.label}
                </a>
              ))}
            </nav>
          </div>

          <!-- Enlaces -->
          <div class="md:col-span-4">
            <p class="text-xs font-semibold uppercase tracking-wider text-white/70">
              Enlaces
            </p>

            <div class="mt-3 grid gap-2 sm:grid-cols-2 md:grid-cols-1">
              {links.map((l) => (
                <a
                  href={l.href}
                  target={l.href.startsWith("http") ? "_blank" : undefined}
                  rel={l.href.startsWith("http") ? "noopener noreferrer" : undefined}
                  class="group inline-flex items-center justify-between gap-3 rounded-2xl border border-white/12 bg-white/10 px-4 py-3
                         text-sm font-semibold text-white/85 transition
                         hover:bg-white/15 hover:border-white/20
                         focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/45"
                >
                  <span class="truncate">{l.label}</span>
                  <span aria-hidden="true" class="text-white/55 transition group-hover:translate-x-0.5">→</span>
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>

      <div aria-hidden="true" class="h-px w-full bg-white/10"></div>

      <!-- Bottom bar -->
      <div class="px-6 py-4 md:px-8 md:py-5">
        <div class="flex items-center justify-center">
          <p class="text-xs text-white/65">
            © {year} <a href="asogom.es">Alejandro Sopeña</a>
          </p>


        </div>
      </div>
    </div>
  </div>
</footer>
